@model School.Models.University

@{
    ViewData["Title"] = "Delete University";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "University")">University</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "University")">List of Universities</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete University</li>
    </ol>
</nav>

<div class="container py-4">
    <h1 class="mb-4 text-center text-danger">
        <i class="fa-solid fa-trash-can me-2"></i>Delete University
    </h1>

    <h3 class="text-center text-warning mb-4">Are you sure you want to delete this university?</h3>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h4 class="mb-3">University Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.UniversityName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.UniversityName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.UniversityAdress)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.UniversityAdress)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="UniversityID" />
                <button type="submit" class="btn btn-danger w-100 mb-3">
                    <i class="fa-solid fa-trash me-2"></i>Confirm Deletion
                </button>
            </form>

            <div class="text-center">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
